<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Messages:</b>
  <% @user.messages.each do |message| %>
    <% if message.quote == true %>
      <%= message.body %> |
      <%= message.date %><br>
    <% end %>
  <% end %>
</p>

<%= link_to 'New Message', new_message_path %> |
<%= link_to 'Back', messages_path %>