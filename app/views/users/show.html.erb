<div class="message">
  <h1 id="user_page_top"><%= @user.name %> said:</h1>
  <% @user.messages.each do |message| %>
    <% if message.quote == true %>
      <p class="quote"><%= message.body %></p>
    <% end %>
  <% end %>
  <hr>
  <h3>Add a new quote for this person:</h3>
  <%= render 'shared/form' %>
</div>

